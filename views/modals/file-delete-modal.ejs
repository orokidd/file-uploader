<div class="file-delete-modal">
    <div class="modal-content">
        <h2>Delete File</h2>
        <p class="file-delete-confirmation">Are you sure you want to delete this file?</p>
        <form id="file-delete-form" action="" method="POST">
            <div class="button-group">
                <button type="button" class="cancel-btn" onclick="document.querySelector('.file-delete-modal').style.display='none'">Cancel</button>
                <button class="confirm-btn" type="submit">Delete</button>
            </div>
        </form>
    </div>
</div>