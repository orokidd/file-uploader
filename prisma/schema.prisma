datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"  
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  password  String
  folders   Folder[]
  files     File[]
 
  @@map("file_uploader_user")
}

model Folder {
  id        Int      @id @default(autoincrement())
  name      String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  files     File[]

  @@map("file_uploader_folder")
}

model File {
  id        Int      @id @default(autoincrement())
  name      String
  url       String?
  size      Int
  folder    Folder?  @relation(fields: [folderId], references: [id])
  folderId  Int?
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())

  @@map("file_uploader_file")
}

model Session {
  id           Int      @id @default(autoincrement())
  sid          String   @unique
  data         String
  expires      DateTime

  @@map("file_uploader_session")
}
