<div class="files">
    <% files.forEach((file)=> { %>
        <div class="file">
            <div class="file-icon">
                <%- include('../file-icon', { file: file }) %>
            </div>

            <div class="file-content">
                <a href="/file/<%= file.id %>">
                    <%= file.originalName %>
                </a>
            </div>


            <div class="file-footer">
                <p class="mimetype">
                    <%= file.mimetype ? file.mimetype : '???' %>
                </p>

                <div class="file-actions">
                        <button onclick="openDeleteFileModal('<%= file.id %>', 'folder')" type="submit" id="file-delete-button">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-trash2-icon lucide-trash-2">
                                <path d="M10 11v6" />
                                <path d="M14 11v6" />
                                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6" />
                                <path d="M3 6h18" />
                                <path d="M8 6V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
                            </svg>
                        </button>

                    <a href="<%= file.url %>" id="file-download-button">
                        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                            stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-download-icon lucide-download">
                            <path d="M12 15V3" />
                            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
                            <path d="m7 10 5 5 5-5" />
                        </svg>
                    </a>
                </div>

            </div>
        </div>
        <% }); %>

        <div class="new-file-button">
            <%- include('./new-file') %>
        </div>
</div>