<div class="new-folder-form-modal">
    <div class="modal-content">
        <h2>New Folder</h2>
        <form id="new-folder-form" action="/folders" method="POST">
            <input id="new-folder-input" type="text" name="foldername" placeholder="Folder Name" required>
            <div class="button-group">
                <button type="button" class="cancel-btn">Cancel</button>
                <button class="confirm-btn" type="submit">Create</button>
            </div>
        </form>
    </div>
</div>